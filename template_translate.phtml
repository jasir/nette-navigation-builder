<ul class="whooa">
{assign children $control->getRoot()->getItems()}
{block #nav}
	{foreach $children as $item}
	<li{if $item->isCurrent} class="current"{/if}><a href="{$item->url}">{$item->label|translate}</a>
	{if count($item->getItems())}
		<ul>
			{include #nav, children => $item->getItems()}
		</ul>
	{/if}
	</li>
	{/foreach}
{/block}
</ul>